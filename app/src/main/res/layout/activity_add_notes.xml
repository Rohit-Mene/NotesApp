<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="Mene.example.notesapp.AddNotes" android:id="@+id/ConstraintLayout">

    <EditText
            android:drawableRight="@drawable/baseline_cancel_black_18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etTitle" android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent" android:hint="Enter Title"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="77dp"
            android:layout_marginStart="77dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"/>
    <EditText
            android:drawableRight="@drawable/baseline_cancel_black_18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/etTitle" android:hint="Enter Description"
            android:layout_marginStart="77dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="77dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:id="@+id/etDes" app:layout_constraintHorizontal_bias="0.504"/>
    <Button
            android:background="@drawable/blue_color"
            android:text="Add"
            android:layout_width="50pt"
            android:layout_height="30pt"
            android:id="@+id/button2" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="276dp"
            android:layout_marginStart="276dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.679"
            android:onClick="buAdd"/>
</androidx.constraintlayout.widget.ConstraintLayout>